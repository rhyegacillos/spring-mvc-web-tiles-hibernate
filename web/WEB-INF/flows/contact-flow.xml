<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd">

    <var name="message" class="com.springframework.web.model.Message" />
    <view-state id="showContactForm" model="message">
        <on-entry>
            <set name="requestScope.fromUser" value="usersServiceImpl.getUser(currentUser?.name)"></set>
            <set name="flowScope.fromName" value="fromUser?.name"></set>
            <set name="flowScope.fromEmail" value="fromUser?.email"></set>
            <set name="message.username" value="requestParameters.uid" ></set>
        </on-entry>
        <transition on="send" to="sendMessage"/>
    </view-state>

    <action-state id="sendMessage">
        <evaluate expression="messageServiceImpl.sendMessage(message)" />
        <transition to="messageSent" />
    </action-state>

    <view-state id="messageSent"></view-state>
</flow>